{
  "compilerOptions": {
    "outDir": "./build/",
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "lib": ["es2015", "es6", "dom", "dom.iterable"],
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "src",
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [".vscode", "node_modules", "build", "webpack", "jest"],
  "types": ["typePatches"]
}
