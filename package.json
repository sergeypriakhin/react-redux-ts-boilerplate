{
	"name": "rrt-boilerplate",
	"version": "1.0.0",
	"description": "Boilerplate for React with Redux, TypeScript and routing",
	"main": "index.js",
	"scripts": {
		"clean": "rimraf build",
		"watch": "webpack --watch",
		"start:dev": "webpack-dev-server --color --open --hot  --mode development",
		"dev": "npm run start:dev",
		"build": "npm run clean && webpack --color -p --progress --hide-modules --display-optimization-bailout --mode production",
		"test:clean": "rimraf coverage",
		"test": "jest",
		"test:cov": "jest --coverage",
		"test:watch": "jest --watchAll"
	},
	"jest": {
		"transform": {
			"^.+\\.(ts|tsx)$": "ts-jest"
		},
		"setupTestFrameworkScriptFile": "./test-setup.ts",
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleNameMapper": {
			"\\.(css|scss|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
		},
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"jsx",
			"json",
			"node"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sergeypriakhin/react-redux-ts-boilerplate.git"
	},
	"keywords": [
		"typescript",
		"react",
		"redux",
		"redux ducks",
		"boilerplate",
		"react starter kit",
		"react redux boilerplate",
		"react typescript boilerplate",
		"react-redux-ts-boilerplate"
	],
	"author": "Sergey Priakhin <chucho>",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/sergeypriakhin/react-redux-ts-boilerplate/issues"
	},
	"homepage": "https://github.com/sergeypriakhin/react-redux-ts-boilerplate#readme",
	"devDependencies": {
		"@types/enzyme": "^3.1.11",
		"@types/enzyme-adapter-react-16": "^1.0.2",
		"@types/jest": "^23.1.4",
		"@types/redux-logger": "^3.0.6",
		"awesome-typescript-loader": "^5.2.0",
		"css-loader": "^0.28.11",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"file-loader": "^1.1.11",
		"html-webpack-plugin": "^3.2.0",
		"jest": "^23.3.0",
		"jest-css-modules": "^1.1.0",
		"mini-css-extract-plugin": "^0.4.0",
		"postcss-cssnext": "^3.1.0",
		"postcss-loader": "^2.1.5",
		"react-hot-loader": "^4.3.3",
		"react-test-renderer": "^16.4.1",
		"redux-logger": "^3.0.6",
		"source-map-loader": "^0.2.3",
		"style-loader": "^0.21.0",
		"ts-jest": "^23.0.0",
		"typescript": "^2.9.2",
		"webpack": "^4.12.1",
		"webpack-cli": "^3.0.8",
		"webpack-dev-server": "^3.1.4",
		"webpack-pwa-manifest": "^3.6.2"
	},
	"dependencies": {
		"@types/react": "^16.4.1",
		"@types/react-dom": "^16.0.6",
		"@types/react-redux": "^6.0.2",
		"@types/react-router-dom": "^4.2.7",
		"@types/react-router-redux": "^5.0.15",
		"react": "^16.4.1",
		"react-dom": "^16.4.1",
		"react-redux": "^5.0.7",
		"react-router-dom": "^4.3.1",
		"react-router-redux": "^4.0.8",
		"redux-thunk": "^2.3.0",
		"reselect": "^3.0.1"
	}
}
