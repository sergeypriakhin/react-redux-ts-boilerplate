{
  "name": "tsreact-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate for React with Redux, TypeScript and routing",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "lint:css": "stylelint './src/**'",
    "lint": "eslint --debug './src/**/*.{ts,tsx}'",
    "lint:write": "eslint --debug './src/**/*.{ts,tsx}' --fix",
    "watch": "webpack --watch",
    "start:dev": "webpack-dev-server --mode development",
    "dev": "npm run start:dev",
    "build": "npm run clean && webpack --color -p --progress --hide-modules --display-optimization-bailout --mode production",
    "test:clean": "rimraf coverage",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:watch": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": [
      "yarn lint:write"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "setupTestFrameworkScriptFile": "./test-setup.ts",
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.(css|scss|jpg|png|svg)$": "<rootDir>/node_modules/jest-css-modules"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergeypriakhin/tsreact-boilerplate.git"
  },
  "keywords": [
    "typescript",
    "react",
    "redux",
    "boilerplate",
    "react starter kit",
    "react redux boilerplate",
    "react typescript boilerplate"
  ],
  "author": "Sergey Priakhin <chucho>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/sergeypriakhin/tsreact-boilerplate/issues"
  },
  "homepage": "https://github.com/sergeypriakhin/tsreact-boilerplate#readme",
  "devDependencies": {
    "@types/enzyme": "^3.1.11",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/jest": "^23.1.4",
    "@types/react": "^16.4.1",
    "@types/react-dom": "^16.0.6",
    "@types/react-helmet": "^5.0.7",
    "@types/react-redux": "^6.0.2",
    "@types/react-router-dom": "^4.2.7",
    "@types/react-router-redux": "^5.0.15",
    "@types/redux-logger": "^3.0.6",
    "@types/styled-components": "^4.1.4",
    "@types/styled-theming": "^2.2.0",
    "@types/webpack-env": "^1.13.9",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "css-loader": "^0.28.11",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^5.15.2",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-react": "^7.12.4",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "jest": "^23.3.0",
    "lint-staged": "^8.1.5",
    "mini-css-extract-plugin": "^0.4.0",
    "react-app-rewired": "^1.6.2",
    "react-hot-loader": "^4.6.0",
    "react-test-renderer": "^16.4.1",
    "redux-logger": "^3.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "styled-theming": "^2.2.0",
    "stylelint": "^9.4.0",
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-custom-processor-loader": "^0.6.0",
    "stylelint-processor-styled-components": "^1.5.1",
    "ts-jest": "^23.0.0",
    "ts-loader": "^5.3.2",
    "typescript": "^3.2.2",
    "webpack": "^4.12.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.11",
    "webpack-pwa-manifest": "^3.6.2"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1",
    "styled-components": "^4.1.2"
  }
}
